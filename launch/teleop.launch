<launch>
 <!-- Turtlesim Node-->
  <!--node pkg="turtlesim" type="turtlesim_node" name="sim"/-->

 <!-- joy node -->
  <node respawn="true" pkg="joy"
        type="joy_node" name="joy_node" >
    <param name="dev" type="string" value="/dev/input/js0" />
    <param name="deadzone" value="0.1" />
  </node>

 <!-- Axes -->
  <param name="scale_linear" value="100" type="double"/>
  <param name="scale_angular" value=".5" type="double"/>
  <node pkg="permobil_arm" type="xarm_teleop_joy" name="xarm_teleop_joy"/>

  <node pkg="permobil_arm" output = "screen" type="joy_teleop.py" name="teleop_cmd"/>


</launch>